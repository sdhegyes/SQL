--display all books the store has in stock
SELECT * FROM Bookstore;

--display quantity of books for each section of the store
SELECT section, SUM(quantity) FROM Bookstore GROUP BY section;

--display books with quantities less than 10 ordered by store section
SELECT * FROM Bookstore WHERE quantity < 10 ORDER BY section;

--display total book inventory costs
SELECT SUM(price) FROM Bookstore
